{
    "manifest_version": 2,

    "name": "DogeCam",
    "description": " A chrome extension to make your video calls Doge-y!",
    "version": "0.1.0",

    "icons": { 
        "128": "/img/doge_icon.png" 
    },

    "browser_action": {
        "default_icon": "/img/doge_icon.png",
        "default_popup": "popupBeta.html"
    },

    "content_scripts": [ 
        {
            "matches": ["https://*/*"],
            "js": ["base.js"],
	        "run_at": "document_start"
        } 
    ],
  
    "permissions": [
        "storage"
    ],
  
    "background": {
        "scripts":	["background.js"]
    },

    "web_accessible_resources": [
        "combined.js"
    ]
}